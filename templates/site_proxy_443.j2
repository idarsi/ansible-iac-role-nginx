server {
  listen 443 ssl;
  server_name {{ nginx_site.name }};
  ssl_certificate {{ nginx_public_key_directory }}/{{ nginx_site.name }}.crt;
  ssl_certificate_key {{ nginx_private_key_directory }}/{{ nginx_site.name }}.key;
  location / {
    proxy_pass {{ nginx_site.redirect_to }};
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
  }
}
